generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id           String        @id @default(cuid())
  name         String
  email        String?       @unique
  phone        String?       @unique
  snils        String?       @unique
  passwordHash String
  level        String        @default("BASIC")  // ← String вместо enum
  createdAt    DateTime      @default(now())
  progress     Progress[]
  achievements Achievement[]
  quizAttempts QuizAttempt[]

  @@map("users")
}

model Progress {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  stepId    String
  status    String   @default("IN_PROGRESS")  // ← String вместо enum
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, courseId, stepId])
  @@map("progress")
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  code        String
  title       String
  description String
  unlockedAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, code])
  @@map("achievements")
}

model QuizAttempt {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  score     Int
  maxScore  Int
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@map("quiz_attempts")
}
